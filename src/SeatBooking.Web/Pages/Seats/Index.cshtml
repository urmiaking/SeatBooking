@page

@model SeatBooking.Web.Pages.Seats.IndexModel
@{
    ViewData["Title"] = "رزرو صندلی";
}

<div class="w-100 d-flex justify-content-center align-items-center text-center">
    <div class="container m-3 m-md-0">
        <div class="text-center">
            <h1 class="mb-5">رزرو صندلی</h1>
        </div>

        <div class="d-flex align-items-center justify-content-between mb-3">
            <div>
                <div class="text-muted">لطفا یک صندلی خالی را برای شروع رزرو انتخاب کنید.</div>
            </div>

            <div class="d-flex gap-2">
                <button id="btnResetReservations" type="button" class="btn btn-outline-secondary btn-sm">
                    ریست رزروها
                </button>
            </div>
        </div>

        <div id="seatsGrid" class="row row-cols-2 row-cols-sm-3 row-cols-md-5 g-3">
            @for (var i = 1; i <= 10; i++)
            {
                <div class="col">
                    <button type="button"
                            class="btn w-100 seat-card btn-outline-success"
                            data-seat-number="@i"
                            data-seat-id=""
                            data-seat-status="Available"
                            disabled>
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="fw-semibold">صندلی @i</div>
                            <span class="badge text-bg-success">خالی</span>
                        </div>
                    </button>
                </div>
            }
        </div>

        <div class="modal fade modal-lg" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="paymentModalLabel">پرداخت</h5>
                        <button type="button" class="btn-close m-0" data-bs-dismiss="modal" aria-label="بستن"></button>
                    </div>

                    <div class="modal-body">
                        <div class="mb-2">
                            <div class="fw-semibold" id="paymentSeatTitle">—</div>
                            <div class="text-muted small">برای تکمیل رزرو، یکی از گزینه‌های پرداخت را انتخاب کنید.</div>
                        </div>

                        <div id="paymentAlert" class="alert d-none mb-0" role="alert"></div>
                    </div>

                    <div class="modal-footer d-flex justify-content-between">
                        <div class="small text-muted" id="paymentHint">تا قبل از پایان زمان رزرو می‌توانید دوباره تلاش کنید.</div>

                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-outline-danger" data-pay="Failed">ناموفق</button>
                            <button type="button" class="btn btn-outline-secondary" data-pay="Random">تصادفی</button>
                            <button type="button" class="btn btn-success" data-pay="Success">موفق</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/seat-booking-client-id.js" asp-append-version="true"></script>
    <script src="~/js/seat-booking-reservations-store.js" asp-append-version="true"></script>
    <script src="~/js/seat-booking-api.js" asp-append-version="true"></script>
    <script src="~/js/seat-booking-realtime.js" asp-append-version="true"></script>
    <script src="~/js/seats-page.js" asp-append-version="true"></script>
}